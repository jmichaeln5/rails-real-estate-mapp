<div class="card text-center">

  <%= form_tag '/seller_login' do %>

  <br>
  <h1>Seller Login</h1>

<div class="container">
  <hr>
</div>

  <br>

  <div class="form-group">
    Email:
    <%= text_field_tag :email, '', placeholder: "sample@example.com" %>
  </div>

  <div class="form-group">
    Password:
    <%= password_field_tag :password, '', placeholder: "Password"%>
  </div>

  <br>

  <center class="submit ">
    <%= submit_tag "Submit", class:"btn btn-success" %>
  </center>

  <br>

  <small>
    Don't have an account? <%= link_to "Click Here to Signup.", seller_signup_path %>
  </small>
  <% end %>

<br>

</div>
